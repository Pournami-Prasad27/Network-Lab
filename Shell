[11/04, 6:00 pm] AhanimaðŸ˜‰: #!/bin/bash

# Prompt the user for the filename to convert
echo "Enter the filename to convert:"
read filename

# Check if the file exists
if [ ! -f $filename ]; then
  echo "File not found."
  exit 1
fi

# Convert the file to lowercase
tr '[:upper:]' '[:lower:]' < $filename > lowercase.txt

# Count the number of lines, words, and characters
lines=$(wc -l < lowercase.txt)
words=$(wc -w < lowercase.txt)
characters=$(wc -c < lowercase.txt)

# Display the counts to the user
echo "Number of lines: $lines"
echo "Number of words: $words"
echo "Number of characters: $characters"

# Display the converted file in descending order
sort -r lowercase.txt

# Clean up the temporary file
rm lowercase.txt
[11/04, 6:03 pm] AhanimaðŸ˜‰: #!/bin/bash

# Prompt the user for the 3 marks
echo "Enter the first mark:"
read mark1
echo "Enter the second mark:"
read mark2
echo "Enter the third mark:"
read mark3

# Calculate the average
average=$((($mark1 + $mark2 + $mark3) / 3))

# Display the grade based on the average
if [ $average -ge 90 ]; then
  echo "Grade: S"
elif [ $average -ge 80 ]; then
  echo "Grade: A"
elif [ $average -ge 60 ]; then
  echo "Grade: B"
elif [ $average -ge 40 ]; then
  echo "Grade: P"
else
  echo "Grade: F"
fi
[11/04, 6:04 pm] AhanimaðŸ˜‰: #!/bin/bash

# Prompt the user for the state name
echo "Enter the name of an Indian state:"
read state

# Use case..esac to check the state and display the main language
case $state in
  "Andhra Pradesh")
    echo "Main Language: Telugu"
    ;;
  "Assam")
    echo "Main Language: Assamese"
    ;;
  "Bihar")
    echo "Main Language: Hindi"
    ;;
  "Himachal Pradesh")
    echo "Main Language: Hindi"
    ;;
  "Karnataka")
    echo "Main Language: Kannada"
    ;;
  "Kerala")
    echo "Main Language: Malayalam"
    ;;
  "Lakshadweep")
    echo "Main Language: Malayalam"
    ;;
  "Tamil Nadu")
    echo "Main Language: Tamil"
    ;;
  *)
    echo "Unknown"
    ;;
esac
[11/04, 6:06 pm] AhanimaðŸ˜‰: #!/bin/bash

# Loop through all users whose name starts with "stud"
for user in $(ls /home | grep ^stud); do
  # Get the user ID and group ID
  uid=$(id -u $user)
  gid=$(id -g $user)

  # Change the home folder
  usermod -m -d /usr/$user -u $uid -g $gid $user

  # Change the password
  echo "$user$username123" | chpasswd
done
[11/04, 6:07 pm] AhanimaðŸ˜‰: #!/bin/bash

# Prompt the user for a number
echo "Enter a number:"
read num

# Use for loop to display the multiplication table up to 10 lines
for ((i=1; i<=10; i++)); do
  result=$((num * i))
  echo "$num x $i = $result"
done
[11/04, 6:08 pm] AhanimaðŸ˜‰: #!/bin/bash

# Prompt the user for a decimal number
echo "Enter a decimal number:"
read decimal

# Initialize variables
binary=""
dividend=$decimal

# Use while loop to convert the decimal number to binary
while [ $dividend -ne 0 ]; do
  remainder=$((dividend % 2))
  binary=$remainder$binary
  dividend=$((dividend / 2))
done

# Display the binary number
echo "Binary representation: $binary"
